<% content_for :title, "Stocks" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Stocks</h1>
    <%= link_to "New stock", new_admin_product_stock_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="admin_stocks" class="min-w-full">
    <% if @admin_stocks.any? %>
      <% @admin_stocks.each do |admin_stock| %>
        <%= render admin_stock %>
        <p>
          <%= link_to "Show this stock", [:admin, admin_stock.product, admin_stock], class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No stocks found.</p>
    <% end %>
  </div>
</div>
