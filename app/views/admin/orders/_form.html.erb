<%= form_with(model: [:admin, admin_order], class: "contents") do |form| %>
  <% if admin_order.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(admin_order.errors.count, "error") %> prohibited this admin_order from being saved:</h2>

      <ul class="list-disc ml-6">
        <% admin_order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :customer_email %>
    <%= form.text_field :customer_email, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_order.errors[:customer_email].none?, "border-red-400 focus:outline-red-600": admin_order.errors[:customer_email].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :fullfiled %>
    <%= form.checkbox :fullfiled, class: ["block shadow rounded-md border outline-none mt-2 h-5 w-5", {"border-gray-400 focus:outline-blue-600": admin_order.errors[:fullfiled].none?, "border-red-400 focus:outline-red-600": admin_order.errors[:fullfiled].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :total %>
    <%= form.number_field :total, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_order.errors[:total].none?, "border-red-400 focus:outline-red-600": admin_order.errors[:total].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :address %>
    <%= form.text_field :address, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_order.errors[:address].none?, "border-red-400 focus:outline-red-600": admin_order.errors[:address].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
