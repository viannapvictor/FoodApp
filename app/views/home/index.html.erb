<div class="bg-gray-800 text-white text-center py-20">
    <h1 class="text-5xl font-bold mb-4">Welcome to Ecomm</h1>
    <p class="text-xl mb-8">Your one-stop shop for all your e-commerce needs</p>
    <%= link_to "Shop Now", root_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
</div>
<div class="flex flex-wrap justify-center mt-8 items-center gap-10">
    <% @main_categories.each do |category| %>
        <%= link_to category_path(category) do %>
            <div class="flex flex-col mb-4">
                <h2 class="text-gray-800 font-medium text-lg text-center mb-6">
                    <%= category.name%>
                </h2>
                <%= category.image.present? ? image_tag(category.image.variant(:medium), class:"max-w-lg") : image_tag("http://via.placeholder/300")%>
            </div>
        <% end %>
    <% end %>   
</div>
<div class="bg-gray-100 py-20 my-10">
    <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold text-center text-gray-800 mb-8">Depoimentos</h2>
        <div class="flex flex-wrap">
            <div class="w-full md:w-1/3 px-2 mb-4">
                <div class="bg-gray-100 rounded shadow py-4 px-4">
                    <p class="text-gray-800 text-base mb-4">
                        Gostei muito de comprar nesse site
                    </p>
                    <p class="text-gray-500 text-xs">
                        - Fulano X
                    </p>
                </div>
            </div>
            <div class="w-full md:w-1/3 px-2 mb-4">
                <div class="bg-gray-100 rounded shadow py-4 px-4">
                    <p class="text-gray-800 text-base mb-4">
                        Plataforma muito interessante
                    </p>
                    <p class="text-gray-500 text-xs">
                        - Sicrano X
                    </p>
                </div>
            </div>
            
        </div>
    </div>
</div>