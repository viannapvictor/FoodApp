default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

development:
  <<: *default
  database: auth
  username: your_username
  password: your_password
  host: localhost
  port: 5432

test:
  <<: *default
  database: auth_test

production:
  primary: &primary_production
    <<: *default
    database: auth_production
    username: <%= ENV["DATABASE_USERNAME"] %>
    password: <%= ENV["DATABASE_PASSWORD"] %>
  cache:
    <<: *primary_production
    database: auth_production_cache
    migrations_paths: db/cache_migrate
  queue:
    <<: *primary_production
    database: auth_production_queue
    migrations_paths: db/queue_migrate
  cable:
    <<: *primary_production
    database: auth_production_cable
    migrations_paths: db/cable_migrate 